{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "start": "deno run -A --node-modules-dir npm:vite preview --port 5173",
    "preview": "deno run build && deno run start",
    "serve": "deno run -A npm:vite serve dist/ --host --port 4173"
  },
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "vite": "npm:vite@^6.3.5",
    "vanjs-core": "npm:vanjs-core@^1.5.5"
  }
}
