{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "vite-plugin-vanjs", "vite-vanjs-svg"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "@vanjs/jsx"
  },
  "include": ["src"]
}
