{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "start": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "mini-van-plate": "npm:mini-van-plate@^0.6.3",
    "vite": "npm:vite@^6.3.4",
    "vanjs-core": "npm:vanjs-core@^1.5.5",
    "vanjs-ext": "npm:vanjs-ext@^0.6.2",
    "vite-plugin-vanjs": "npm:vite-plugin-vanjs@^0.1.6"
  }
}
